---
import { BlogSearch } from '@/components/BlogSearch.tsx'
import Container from '@/components/Container.astro'
import PageLayout from '@/layouts/PageLayout.astro'
import { BLOG } from '@/lib/site'
import { getCollection } from 'astro:content'
import generateOgImageUrl from '@/utils/og-image'

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
)

const ogImageUrl = generateOgImageUrl({
  header: `/${BLOG.TITLE.toUpperCase()}`,
  description: BLOG.DESCRIPTION,
})
---

<PageLayout
  title={BLOG.TITLE}
  description={BLOG.DESCRIPTION}
  image={ogImageUrl}>
  <Container>
    <section class="relative pt-28 text-sm sm:pt-40 sm:text-base">
      <header class="mb-16">
        <h1 class="mb-1 text-xl font-bold sm:text-4xl">Blog</h1>
        <p>
          My ramblings on the web about all things tech, life, and productivity!
        </p>
      </header>

      <BlogSearch posts={posts} client:only="react" />
    </section>
  </Container>
</PageLayout>
