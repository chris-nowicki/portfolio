---
import VercelIcon from '@/assets/icons/vercel.svg'
import Container from './Container.astro'
import { navLinks } from '@/lib/site'
import Link from './Link.astro'

const footerLinks = [{ href: '/', text: 'home' }, ...navLinks]
---

<Container>
  <footer
    class="mb-4 mt-12 flex flex-col  justify-between gap-4 sm:flex-row sm:gap-0">
    <div class="flex w-full flex-col items-start text-sm sm:w-2/3">
      <p>
        <strong>Sitemap:</strong>

        {
          footerLinks.map((link, index, array) => (
            <span>
              <a href={link.href} class="hover:text-blue-500">
                {link.text}
              </a>
              {index < array.length - 1 && ' / '}
            </span>
          ))
        }
      </p>
      <p>
        <strong>Built With:</strong> Astro, TypeScript, Tailwind, and lots of <span
          class="hover:animate-pulse">‚ù§</span
        >
      </p>
    </div>
    <div class="flex items-center rounded-sm bg-black text-white w-[175px]">
      <div class="border-r border-white px-2 py-2">
        <Link
          to="https://www.vercel.com"
          icon={true}
          ariaLabel="Visit Vercel's Website"
          class="group">
          <VercelIcon
            size={16}
            class="transition-all duration-200 ease-in-out group-hover:scale-110"
          />
        </Link>
      </div>
      <div class="px-2 text-center text-sm">Powered by Vercel</div>
    </div>
  </footer>
</Container>
