---
import Container from './Container.astro'
import VercelIcon from '@/assets/icons/vercel.svg'

const links = [
  { href: '/', label: 'home' },
  { href: '/now', label: 'now' },
  { href: '/speaking', label: 'speaking' },
  { href: '/uses', label: 'uses' },
]
---

<Container>
  <footer
    class="mb-10 flex flex-col items-center justify-between gap-8 sm:flex-row sm:gap-0">
    <div class="text-sm">
      <p>
        <strong>Sitemap:</strong>

        {
          links.map((link, index, array) => (
            <span>
              <a href={link.href} class="hover:underline">
                {link.label}
              </a>
              {index < array.length - 1 && ' / '}
            </span>
          ))
        }
      </p>
      <p>
        <strong>Built With:</strong> Astro, TypeScript, Tailwind, and lots of ❤
      </p>
    </div>
    <div class="flex items-center gap-2">
      <span>⚡️ by vercel</span>
      <a
        href="https://vercel.com"
        target="_blank"
        aria-label={`Vercel's website`}
        rel="noopener noreferrer">
        <VercelIcon width={24} class="hover:animate-[spin_1s_linear_1]" />
      </a>
    </div>
  </footer>
</Container>
