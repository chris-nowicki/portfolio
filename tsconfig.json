{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "types": ["svelte"]
  },
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/**/*.svelte",
    "src/**/*.astro",
    "src/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}