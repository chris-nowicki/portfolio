{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["preact"]
  },
  "include": [".astro/types.d.ts", "**/*", "src/**/*.tsx"],
  "exclude": ["dist"]
}
