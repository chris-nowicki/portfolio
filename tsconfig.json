{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/**/*.tsx"
  ],
  "exclude": [
    "dist"
  ]
}